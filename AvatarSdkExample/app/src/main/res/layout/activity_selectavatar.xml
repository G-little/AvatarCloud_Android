<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".DemoSplashActivity">

    <RelativeLayout
        android:id="@+id/rel_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="14dp"
            android:src="@mipmap/ic_back" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@mipmap/ic_settings_my" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/touxiang_bg" />

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp">

            <com.jrxj.avatar.ui.view.ShadowLayout
                android:id="@+id/mShadowLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hl_cornerRadius="0dp"
                app:hl_layoutBackground="@color/transparent"
                app:hl_shadowColor="#8093a0b9"
                app:hl_shadowLimit="0dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/touxiang" />
            </com.jrxj.avatar.ui.view.ShadowLayout>

            <ImageView
                android:id="@+id/iv_select_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/enter_black" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="张三"
            android:textColor="#ff000000"
            android:textSize="20sp" />

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="#BAF94E"
            android:gravity="center"
            android:text="登录"
            android:textSize="14sp"
            app:bl_corners_radius="12dp"
            app:bl_selected_solid_color="#111111"
            app:bl_selected_textColor="@color/white"
            app:bl_unSelected_solid_color="#111111"
            app:bl_unSelected_textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>